<div class="container-fluid px-4">
    <h1 class="mt-4">Usuarios</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Usuarios</li>
    </ol>
    <%- include('../partials/message') %>
    <div class="card mb-4">
        <!-- <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Users
        </div> -->
        <div id="card-body" class="card-body">
            <button type="button" data-name="user" class="addbtn btn btn-primary btn-header" data-bs-toggle="modal" data-bs-target="#addModal">
                Añadir usuario
            </button>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Tipo de Caso</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Celular</th>
                        <th>Carnet de identidad</th>
                        <th>Cambio de contraseña</th>
                        <th>Creado</th>
                        <th>Creador</th>
                        <th>Modificado</th>
                        <th>Modificador</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Tipo de Caso</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Celular</th>
                        <th>Carnet de identidad</th>
                        <th>Cambio de contraseña</th>
                        <th>Creado</th>
                        <th>Creador</th>
                        <th>Modificado</th>
                        <th>Modificador</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% for (let user of users) { %>
                        <tr>
                            <td><%= user.rol_id %></td>
                            <td><%= user.nombre %></td>
                            <td><%= user.email %></td>
                            <td><%= user.celular %></td>
                            <td><%= user.c_identidad %></td>
                            <td><%= user.fecha_password.toLocaleString() %></td>
                            <td><%= user.creado.toLocaleString() %></td>
                            <td><%= user.creador %></td>
                            <td><%= user.modificado.toLocaleString() %></td>
                            <td><%= user.modificador%></td>
                            <td>
                                <button data-id="<%= user.id %>" data-name="user" type="button" class="btn btn-primary editbtn" data-bs-toggle="modal" data-bs-target="#editModal">
                                    Editar
                                </button>
                                
                            </td>
                            <td>
                                <a href="/user/delete/<%= user.id %>" data-id="<%= user.id %>" data-name="user" class="btn btn-danger btn-delete">Eliminar</a>
                            </td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="/js/role.js"></script>
<script src="/js/user.js"></script>
<%- include('./add_modal') %>
<%- include('./edit_modal') %>