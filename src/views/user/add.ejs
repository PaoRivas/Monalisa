<div class="container p-4">
  <div class="row">
    <div class="col-md-4  mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/user/add" method="POST">
            <div class="mb-3">
              <input type="text" class="form-control" name="fullname" placeholder="Fullname" autofocus>
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" name="email" placeholder="Email" >
            </div>
            <div class="mb-3">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="mb-3">
                <input type="text" name="cellphone" placeholder="Cellphone" class="form-control">
            </div>
            <div class="mb-3">
                <input type="text" name="identity" placeholder="ID" class="form-control">
            </div>
            <div class="mb-3">
              <button class="btn btn-success btn-block">
                SAVE
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>