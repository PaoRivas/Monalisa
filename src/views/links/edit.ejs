<div class="container p-4">
  <div class="row">
    <div class="col-md-4  mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/<%= user.id %>" method="POST">
            <div class="form-group">
              <input type="text" value= "<%= user.first_name %>" class="form-control" name="business_name" placeholder="Empresa" autofocus>
            </div>
            <div class="form-group">
              <input type="text" value= "<%= user.last_name %>" class="form-control" name="bd_name" placeholder="Base de datos" >
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                SAVE
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>